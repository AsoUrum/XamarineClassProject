<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="finalProject.SearchResultPage">


    <StackLayout>


        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="Ingredient search!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>




        <StackLayout>
            <ListView x:Name="listNutrients">
                <ListView.ItemTemplate>

                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>

                                <Image Source="{Binding image}" HeightRequest="400" WidthRequest="100" />
                                
                                <Label Text="{Binding name}" FontSize="Small" />

                            </StackLayout>


                        </ViewCell>
                    </DataTemplate>
                    
                </ListView.ItemTemplate>
               
            </ListView>
        </StackLayout>


       





    </StackLayout>

</ContentPage>